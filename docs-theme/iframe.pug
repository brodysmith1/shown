html
  meta(
    name="viewport"
    content="width=device-width, initial-scale=1"
  )

  style.
    * {
      margin: 0
    }

    html, body {
      height: 100%;
      overflow: hidden;
    }

    body {
      display: flex;
      padding: 1em;
      box-sizing: border-box;
    }

    #chart {
      margin: auto;
      max-width: 100%;
      max-height: 100%;
      aspect-ratio: 1 / 1;
    }

    #chart svg {
      width: 100vw;
      max-width: 100%;
      max-height: 100%;
    }

  body
    #chart
      !=body