{
  "name": "shown",
  "version": "0.1.0",
  "description": "Statically-generated, responsive charts, without the need for client-side Javascript.",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest && jest-coverage-badges",
    "docs": "documentation build ./src/index.js -f html -g -o docs -t ./docs-theme/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenhutchings/shown.git"
  },
  "keywords": [
    "pie",
    "bar",
    "line",
    "area",
    "donut",
    "semantic",
    "accessibility",
    "a11y",
    "flex",
    "no-js",
    "ssr",
    "ssg"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stephenhutchings/shown/issues"
  },
  "homepage": "https://stephenhutchings.github.io/shown",
  "devDependencies": {
    "documentation": "^13.2.5",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "pug": "^3.0.2"
  },
  "files": [
    "./src/**/*"
  ],
  "type": "module",
  "jest": {
    "coverageReporters": [
      "json-summary"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  }
}
